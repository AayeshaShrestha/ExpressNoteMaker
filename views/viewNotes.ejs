<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Note Maker</title>

    <link href="stylesheets/bootstrap.min.css" rel="stylesheet">
    <link href="stylesheets/style.css" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  </head>

  <body>
    <div class="container">
      <div class="header clearfix container">
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
          <a class="navbar-brand" href="/">Note Maker</a>
          <div class="collapse navbar-collapse" id="navbarsExampleDefault">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <a class="nav-link" href="/newNotes">Make New</a>
              </li>
              <li class="nav-item active">
                <a class="nav-link" href="/viewNotes">View Notes</a>
              </li>
            </ul>
          </div>
        </nav>
      </div>

    <div class="my-3 p-3 bg-white rounded box-shadow" style="margin:25px;">
      <h4 class="border-bottom border-gray pb-2 mb-0">My Notes</h4>

      <% notes.forEach(function(note,i){ %>
        <div class="well" style="margin-top : 8px;">
          <h5><strong> <%= note.title %> </strong></h5>
      		<p> <%= note.description %> </p>
          <a class="btn btn-primary" href="/editNote/<%= note._id %>"><i class="fa fa-pencil"></i> Edit</a>
          &nbsp
         <a class="btn btn-danger" href="/deleteNote/<%= note._id %>"><i class="fa fa-trash"></i> Delete</a>
      </div>
    <% }) %>
  </div>

    </div>

  </body>
</html>
